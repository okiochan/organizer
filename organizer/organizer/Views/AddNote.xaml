<Window x:Class="organizer.Views.AddNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:organizer.Views"
        mc:Ignorable="d"
        Title="AddNote" Height="150" Width="300">
    
    <Grid Background="LightGoldenrodYellow">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="add note" TextAlignment="Center" FontSize="15"/>
            <TextBox Name="txtNote" Height="50" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" ></TextBox>
            <Button Width="50" Name="butApply" Click="butApply_Click">apply</Button>
        </StackPanel>
        
    </Grid>
</Window>

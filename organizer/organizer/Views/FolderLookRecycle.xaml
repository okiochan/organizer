<Window x:Class="organizer.Views.FolderLookRecycle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:organizer.Views"
        mc:Ignorable="d"
        Title="FolderLookRecycle" d:DesignHeight="120" d:DesignWidth="250" Loaded="Window_Loaded">

    <Grid Background="LightGoldenrodYellow">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="5" Background="LightGreen" Name="butRestore" Click="butRestore_Click">restore to active</Button>
            <Button Margin="5" Background="LightPink" Name="butDelete" Click="butDelete_Click">delete</Button>
        </StackPanel>

        <TextBox Name="txtBoxTitle" Grid.Row="1" Background="Bisque" FontSize="20" Height="40" Width="250" TextWrapping="Wrap" >Title of the task....</TextBox>
    </Grid>

</Window>

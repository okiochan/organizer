<Window x:Class="organizer.Views.Test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:organizer.Views"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="Test" Height="400" Width="400">
    <Grid>

        <Canvas Name="canv" Width="350" Height="350" >
            <Ellipse Name="el1" Fill="Bisque" Canvas.Top="60" Canvas.Left="60"  Width="320" Height="320" />
            <Ellipse Name="el2" Fill="LightSkyBlue" Canvas.Top="50"  Canvas.Left="50" Width="320" Height="320" />
            <Ellipse Name="el3" Fill="GhostWhite" Canvas.Top="60"  Canvas.Left="60" Width="320" Height="320" />
            <Ellipse Name="el4" Fill="LightSkyBlue"   Canvas.Top="225" Canvas.Left="225" Width="20" Height="20" />

            <Ellipse Name="circChoosen" Fill="LightPink"  Width="40" Height="40" Canvas.Top="225" Canvas.Left="225" Visibility="Hidden" />
            <Line  Name="lineChoosen" X1="235" Y1="235"  X2="235" Y2="60" Stroke="LightPink" StrokeThickness="4" Visibility="Hidden" />
            
        </Canvas>

    </Grid>
</Window>
